<%- provide :head do -%>
   <%= stylesheet_link_tag :user -%>
<%- end -%>

<p class="avatar"><%= image_tag @user.decorate.avatar_url %></p>


<%= form_for @user, :url => { :action => "update" } do |f| %>

  <fieldset>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email, disabled: true %>
      <small>* This is the address we use for your Gravatar image</small>
    </p>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :twitter_username %>
      <%= f.text_field :twitter_username %>
    </p>

    <p>
      <%= f.label :bio %>
      <%= f.text_area :bio, rows: 5, maxlength: 128 %>
    </p>

    <p>
      <%= f.submit "Save" %>
      <%= link_to 'cancel', user_path(@user), class: 'hl-button' %>
    </p>

</fieldset>

<% end %>
