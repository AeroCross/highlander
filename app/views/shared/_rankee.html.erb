<li class="rankee">
  <%= link_to user_path(rankee.user) do %>
    <p class="rank"><%= (rankee.index) %></p>

    <ul class="details">
      <li class="avatar"><span><%= image_tag rankee.user.avatar_url 90 %></span></li>
      <li class="name"><%= rankee.user.name %></li>
      <li class="twitter-handle"><%= rankee.user.twitter_username %></li>
      <li class="bio"><%= rankee.user.bio.truncate(70, separator: ' ', omission: 'â€¦') %></li>
    </ul>

    <ul class="scores">
      <li class="total-score"><span><%= rankee.user.running_score %></span> Score</li>
      <li class="total-badges"><span><%= rankee.user.total_badges %></span> Badges</li>
    </ul>

  <%- end -%>
</li>
