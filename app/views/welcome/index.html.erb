<%- provide :head do -%>
   <%= stylesheet_link_tag :welcome -%>
<%- end -%>

<%- provide :pre_main do -%>
  <div class="hero">
    <div class="container">
      <h2>Highlander turns work into a game. Be awesome, earn badges and become the leader!</h2>
    </div>
  </div>
<%- end -%>

<ul class="ranking">

  <%- @users.each_with_index do |user, i| -%>
    <li class="rankee">
      <%= link_to user_path(user) do %>
        <p class="rank"><%= (i + 1) %></p>

        <div class="details">
          <p class="avatar"><%= image_tag user.avatar_url 100 %></p>
          <p class="name"><%= user.name %></p>
          <p class="bio"><%= user.bio %></p>
        </div>

        <ul class="scores">
          <li class="total-score"><%= user.total_score %></li>
          <li class="total-badges"><%= user.total_badges %></li>
        </ul>

        <p class="last-updated"><%= user.last_event_created_at %></p>
      <%- end -%>
    </li>
  <%- end -%>

</ul>
