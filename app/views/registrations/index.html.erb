<%- provide :head do -%>
   <%= stylesheet_link_tag :registrations -%>
<%- end -%>

<%- provide :pre_main do -%>
  <div class="hero">
    <div class="container">
      <h2>Have we piqued your interest? Let's stay in touch!</h2>
      <h3>We've got grand plans for Hilander, and we want to share them with you</h3>
    </div>
  </div>
<%- end -%>

<section class="registrations single-column">

  <% unless @registered %>

    <section class="blurb">
      <p>We won't be spamming you or anything like that. In fact, you'll only hear from us on <em>really</em> special occasions. Go ahead, fill 'er out and we'll keep you posted about our baby project. Thanks for stopping by!</p>
    </section>

    <%= form_for(@registration) do |f| %>
      <% if @registration.errors.any? %>

        <div id="error_explanation">
          <h2>Whoa there! We found <%= pluralize(@registration.errors.count, "error") %>:</h2>

          <ul>
          <% @registration.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>

        </div>
      <% end %>

      <p>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'your@email.here' %>
      </p>

      <p class="button-holder">
        <%= f.button 'Register!', class: 'button large' %>
      </p>

    <% end %>

  <% end %>

</section>


<section class="organisations single-column">

  <h2>Organisations experiencing the quickening</h2>

  <ul>
    <li>
      <%= link_to image_tag(asset_path('hooroo.png')), organisation_url('hooroo') %>
      <p>Hooroo</p>
    </li>
    <li>
      <%= link_to image_tag(asset_path('agile-aus.png')), organisation_url('agileaus') %>
      <p>Agile Australia</p>
    </li>
  </ul>

</section>